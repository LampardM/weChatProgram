@import "../../font/iconfont.wxss";

.modal-container {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.modal-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding-top:40rpx;
  z-index: 5000;
  width: 500rpx;
  max-width: 500rpx;
  height: 300rpx;
  margin: auto;
  background-color: #fff;
  text-align: center;
  border-radius: 5px;
  animation: action_scale .5s;
}

.modal-body {
  padding: 0 1.6em 0.8em;
  height: 100rpx;
  min-height: 40rpx;
  font-size: 15px;
  line-height: 100rpx;
  word-wrap: break-word;
  word-break: break-all;
  color: #808080;
}


@keyframes action_scale {
	0% { transform: scale(0.5); opacity: 0; }
	100% { transform: scale(1); opacity: 1; }
}

.modal-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 10rpx;
}

.copy-btn {
  width: 80%;
  border-radius: 50rpx;
  padding: 20rpx;
  background-image:linear-gradient(269deg, #ff6026 0%, #ff994e 100%);
  box-shadow:0 8rpx 24rpx 0 rgba(255,96,38,0.30);
  color: #fff;
  font-size: 30rpx;
}

.modal-delete {
  width: 60rpx;
  height: 60rpx;
  font-size: 50rpx;
  position: absolute;
  bottom: -80rpx;
  right: calc(50% - 30rpx);
  z-index: 9999;
  color: #fff;
}

.modal-header {
  color: orange;
}
