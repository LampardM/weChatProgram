.cur-container {}

.addedit-product {
  padding: 50rpx;
}

.pro-content {
  border-bottom:1rpx solid #eee;
  padding-left: 10rpx;
}

.pro-content input {
  width: 525rpx;
}

.edit-item {
  display: flex;
  margin-bottom: 50rpx;
}

.edit-item:nth-child(6) .pro-content {
  padding-left: 0rpx;
}

.edit-item:nth-child(4) .pro-content {
  border-bottom: none;
  display:flex;
  align-items:center;
}

.edit-item:nth-child(5) .pro-content {
  border-bottom: none;
  display:flex;
  align-items:center;
}

.pro-textarea {
  width: 510rpx;
  height: 200rpx;
  padding: 10rpx;
  border: 1px solid #eee;
}

.submit-btn {
  display: flex;
  justify-content: center;
}

.submit-btn view {
  width: 80%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 50rpx;
  background: #4682B4;
  color: #fff;
}

.add-container {
  width: 150rpx;
  height: 150rpx;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-container {
  width: 150rpx;
  height: 150rpx;
  background: #eee;
  margin-right: 25rpx;
  position: relative;
}

.img-container image {
  width: 100%;
  height: 100%;
}

.remove-icon {
  position: absolute;
  right: -10rpx;
  top:-10rpx;
  z-index: 1000;
  background: #eee;
  border-radius: 50%;
}

.pro-input {
  font-size: 30rpx;
  color: #888;
}